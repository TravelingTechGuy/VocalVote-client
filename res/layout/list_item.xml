<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView_listitem"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_listitem_details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        
        <ImageButton
        android:id="@+id/imageButton_up"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@drawable/thumbup" 
        />
        
        <ImageButton
        android:id="@+id/imageButton_down"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@drawable/thumbdown" />

        
    </LinearLayout>

</LinearLayout>